<div class="marketing">
    <div class="featurette row">
        <div class="col-md-7 mt-10rem">
            <h2 class="featurette-heading fw-normal lh-1">First featurette heading.
                <span class="text-muted">It'll blow you mind</span>
            </h2>
            <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Earum architecto reiciendis sint
                nihil veniam nobis facilis adipisci sunt ducimus impedit.</p>
        </div>
        <div class="col-md-5">
            <img src="/pic1.png" width="100%">
        </div>
    </div>
</div>
<hr class="featurette-divider">
<div class="featurette row">
    <div class="col-md-7 order-md-2 mt-10rem">
        <h2 class="featurette-heading fw-normal lh-1">Lorem ipsum dolor sit. <span class="text-muted">Lorem, ipsum dolor
                sit amet consectetur adipisicing elit. </span></h2>
        <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Illum, provident distinctio.
            Doloremque nam delectus libero atque dolore esse dolorum fugiat.</p>
    </div>
    <div class="col-md-5 order-md-1">
        <img src="/pic2.png" width="100%">
    </div>
</div>
<hr class="featurette-divider">
{{#if products.length}}
<p class="fs-1">Products list</p>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
    <div class="col">
        <div class="card shadow-sm">
            <img src="{{image}}" />
            <div class="card-body">
                <p class="card-text fw-bold">{{title}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="m-0 p-0">{{formatDate createdAt}}</p>
                    <small class="text-muted fs-5">{{price}}.00$</small>
                </div>
            </div>

            <div class="card-footer">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-outline-primary" href="/product/{{_id}}">Details</a>
                    {{#if @root.token}}
                    {{#ifequal user @root.userId}}
                    <a type="button" class="btn btn-outline-secondary" href="/edit-product/{{_id}}">Edit</a>
                    <form action="/delete-product/{{_id}}" method="post" class="m-0 btn btn-outline-danger">
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                    {{/ifequal}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<section class="gape-404 w-75 mx-auto">
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <div class="four-zero-four-bg">
                    <h1 class="text-center">404</h1>
                </div>
                <div class="contant-box-404">
                    <h3 class="h2">Add new products</h3>
                    <a href="/add" class="btn btn-primary btn-lg mb-5">Add products</a>
                </div>
            </div>
        </div>
    </div>
</section>
{{/if}}