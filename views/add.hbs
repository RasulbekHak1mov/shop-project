<div class="row">
    <div class="col-md-6">
        <div class="mt-5rem">
            <p class="fs-1">Add products</p>
            {{#if errorAddProducts}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong> {{errorAddProducts}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}
            <form action="/add-products" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="title" id="floatingInput" placeholder="title"
                        autocomplete="off">
                    <label for="floatingInput">Title</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" name="description" placeholder="Description" id="floatingTextarea2"
                        style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Description</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="image" id="floatingInput" placeholder="Image"
                        autocomplete="off">
                    <label for="floatingInput">Image</label>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light">$</span>
                    <div class="form-floating">
                        <input type="number" class="form-control" name="price" id="floatingInputGroup1"
                            placeholder="Price">
                        <label for="floatingInputGroup1">Price</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Add product</button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        {{!-- <img src="https://www.allen.ac.in/apps2223/assets/images/login.jpg" width="120%"> --}}
        <img src="/sign.png" width="100%">
    </div>
</div>